/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  
  .scroll {
      height: 1170rpx;
      z-index: 101;
      position: fixed;
    }
  
    .flex-item {
      width: 105rpx;
      height: 100px;
    }
    
    .kcb-item {
      position: absolute;
      justify-content: center;
      display: flex;
      align-items: center;
      border-radius: 5px;
    }
    
    .smalltext {
      font-size: 8pt;
      color: #fff;
      padding-left: 2px;
    }
  
    .left {
      width: 35rpx;
      height: 101rpx;
      font-size: 9pt;
      justify-content: center;
      background-color: #fff;
      margin-right: 3rpx;
      display: flex;
      align-items: center;
    }