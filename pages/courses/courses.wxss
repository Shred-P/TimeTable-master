.flex-item {
    width: 105rpx;
    height: 100px;
  }
  
  .kcb-item {
    position: absolute;
    justify-content: center;
    display: flex;
    align-items: center;
    border-radius: 5px;
  }
  
  .smalltext {
    font-size: 8pt;
    color: #fff;
    padding-left: 2px;
  }
  
  .top {
    display: flex;
    flex-direction: row;
    margin-left: 35rpx;
    background-color: #d2e6b3;
    color: #7cba23;
  }
  
  .top-text {
    width: 105rpx;
    height: 35rpx;
    font-size: 9pt;
    justify-content: center;
    display: flex;
    align-items: center;
  }
  
  .scroll {
    height: 1170rpx;
    z-index: 101;
    position: fixed;
  }
  
  .left {
    width: 35rpx;
    height: 100rpx;
    font-size: 9pt;
    justify-content: center;
    display: flex;
    align-items: center;
  }
  